{
    "version": 2,
    "builds": [
        {
            "src": "news/wsgi.py",
            "use": "@vercel/python"
        },
        {
            "src": "staticfiles/",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "staticfiles/$1"
        },
        {
            "src": "/(.*)",
            "dest": "news/wsgi.py"
        }
    ],
    "build": {
        "env": {
            "PYTHON_VERSION": "3.9",
            "DJANGO_SETTINGS_MODULE": "news.settings",
            "DISABLE_COLLECTSTATIC": "0"
        }
    },
    "env": {
        "DATABASE_URL": "@database_url",
        "SECRET_KEY": "@django_secret_key",
        "DEBUG": "False",
        "ALLOWED_HOSTS": ".vercel.app,.now.sh"
    }
}
